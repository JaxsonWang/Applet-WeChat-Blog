/**index.wxss**/
.index-image {
  width: 100%;
}

.article-list {
  flex-direction: column;
}

.article-item {
  width: 100%;
  position: relative;
  margin: 20rpx 0;
}

.article-image {
  width: 100%;
  position: relative;
}

.article-image::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.article-header {
  position: absolute;
  left: 20rpx;
  bottom: 20rpx;
  color: #fff;
}

.article-title {
  font-size: 32rpx;
}

.article-info {
  font-size: 28rpx;
}