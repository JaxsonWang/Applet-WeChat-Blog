@import "../template/footer.wxss";

page {
    position: relative;
}

.detail-header {
    width: 100%;
}

.detail-image {
    width: 100%;
}

.detail-title {
    width: 100%;
    position: relative;
    margin-bottom:-3%;
    margin-top:-9.8%;
    text-align: center;
}

.detail-title .title {
    font-size: 40rpx;
    background-color: rgba(0, 0, 0, 0.5);
    color: #fff;
}

.detail-title .time {
    font-size: 24rpx;
    margin-top: 15rpx;
}

.detail-main {
    margin: 40rpx 0 20rpx 0;
    padding: 20rpx;
    background: #fff;
}